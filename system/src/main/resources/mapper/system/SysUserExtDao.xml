<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.SysUserExtDao">
	
	<resultMap id="SysUserExtMap" type="com.sdstc.system.model.SysUserExt">
	    <id column="id" property="id" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="create_account" property="createAccount" />
	    <result column="is_delete" property="isDelete" />
	    <result column="last_login_time" property="lastLoginTime" />
	    <result column="last_login_fail_time" property="lastLoginFailTime" />
	    <result column="last_login_addr" property="lastLoginAddr" />
	    <result column="login_fail_count" property="loginFailCount" />
	    <result column="user_account" property="userAccount" />
	</resultMap>
	
    <sql id="SysUserExtCols">
      id,gmt_create,gmt_modified,modified_account,create_account,is_delete,last_login_time,last_login_fail_time,last_login_addr,login_fail_count,user_account
    </sql>
    
    <sql id="SysUserExtProps">
      #{id},#{gmtCreate},#{gmtModified},#{modifiedAccount},#{createAccount},#{isDelete},#{lastLoginTime},#{lastLoginFailTime},#{lastLoginAddr},#{loginFailCount},#{userAccount}
    </sql>
    
    <sql id="SysUserExtWhere">
      
    </sql>
    
    <sql id="SysUserExtDtoWhere">
      
    </sql>
	
	<select id="selectByDto"  parameterType="com.sdstc.system.model.SysUserExt" resultMap="SysUserExtMap">
		select
			<include refid="SysUserExtCols"></include>
		from sys_user_ext
		<where>
		    <include refid="SysUserExtWhere"></include>
		</where>
	</select>
	
	<select id="selectCountByDto"  parameterType="com.sdstc.system.model.SysUserExt" resultType="Integer">
		select
			count(*)
		from sys_user_ext
		<where>
		    <include refid="SysUserExtWhere"></include>
		</where>
	</select>
	
	<select id="selectPageByDto" resultMap="SysUserExtMap">
		select
			<include refid="SysUserExtCols"></include>
		from sys_user_ext
		<where>
		    <include refid="SysUserExtDtoWhere"></include>
		</where>
		limit #{pageDto.start},#{pageDto.pageSize}
	</select>
	
	<select id="selectByUserDto" parameterType="com.sdstc.system.model.UserInfo" resultMap="SysUserExtMap" >
		select
			t1.id,t1.last_login_time,t1.last_login_fail_time,t1.last_login_addr,t1.login_fail_count,t1.user_account
		from sys_user_ext t1
		left join sys_user t2 on t1.user_account=t2.account
		<where>
		    (t2.account=#{account} or t2.phone=#{account} or t2.email=#{account})
		    and t2.state=#{state}
		    and t2.is_delete=#{isDelete}
		</where>
	</select>
	
	<update id="updateSelectiveByUserAccount" parameterType="com.sdstc.system.model.SysUserExt">
		update sys_user_ext
		<set>
	        <if test="gmtModified != null">
		        gmt_modified = #{gmtModified},
		    </if>
		  
	        <if test="modifiedAccount != null and modifiedAccount != ''">
		        modified_account = #{modifiedAccount},
		    </if>
	        <if test="isDelete != null and isDelete != ''">
		        is_delete = #{isDelete},
		    </if>
	        <if test="lastLoginTime != null">
		        last_login_time = #{lastLoginTime},
		    </if>
	        <if test="lastLoginFailTime != null">
		        last_login_fail_time = #{lastLoginFailTime},
		    </if>
	        <if test="lastLoginAddr != null and lastLoginAddr != ''">
		        last_login_addr = #{lastLoginAddr},
		    </if>
	        <if test="loginFailCount != null">
		        login_fail_count = #{loginFailCount},
		    </if>
		</set>
		<where>
		  user_account = #{userAccount} 
		</where> 
	</update>
</mapper>