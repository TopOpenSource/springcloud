<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.PubFileDao">
	
	<resultMap id="PubFileMap" type="com.sdstc.system.model.PubFile">
	    <id column="id" property="id" />
	    <result column="name" property="name" />
	    <result column="size" property="size" />
	    <result column="path" property="path" />
	    <result column="type" property="type" />
	    <result column="customer_id" property="customerId" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="create_account" property="createAccount" />
	    <result column="modified_account" property="modifiedAccount" />
	</resultMap>
	
    <sql id="PubFileCols">
      id,name,size,path,type,customer_id,gmt_create,gmt_modified,create_account,modified_account
    </sql>
    
    <sql id="PubFileProps">
      #{id},#{name},#{size},#{path},#{type},#{customerId},#{gmtCreate},#{gmtModified},#{createAccount},#{modifiedAccount}
    </sql>
    
    <sql id="PubFileWhere">
      
    </sql>
    
    <sql id="PubFileDtoWhere">
      
    </sql>
    
    <select id="selectByDto"  parameterType="com.sdstc.system.model.PubFile" resultMap="PubFileMap">
		select
			<include refid="PubFileCols"></include>
		from pub_file
		<where>
		    <include refid="PubFileWhere"></include>
		</where>
	</select>
	
	<select id="selectCountByDto"  parameterType="com.sdstc.system.model.PubFile" resultType="Integer">
		select
			count(*)
		from pub_file
		<where>
		    <include refid="PubFileWhere"></include>
		</where>
	</select>
	
	<select id="selectPageByDto" resultMap="PubFileMap">
		select
			<include refid="PubFileCols"></include>
		from pub_file
		<where>
		    <include refid="PubFileDtoWhere"></include>
		</where>
		limit #{pageDto.start},${pageDto.pageSize}
	</select>
</mapper>