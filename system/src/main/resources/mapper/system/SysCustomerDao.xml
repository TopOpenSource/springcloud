<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.SysCustomerDao">
	
	<resultMap id="SysCustomerMap" type="com.sdstc.system.model.SysCustomer">
	    <id column="id" property="id" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="create_account" property="createAccount" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="is_delete" property="isDelete" />
	    <result column="name" property="name" />
	    <result column="no" property="no" />
	    <result column="phone" property="phone" />
	    <result column="email" property="email" />
	    <result column="card_image_id" property="cardImageId" />
	    <result column="address" property="address" />
	    <result column="register_date" property="registerDate" />
	    <result column="state" property="state" />
	</resultMap>
	
    <sql id="SysCustomerCols">
      id,gmt_create,gmt_modified,create_account,modified_account,is_delete,name,no,phone,email,card_image_id,address,register_date,state
    </sql>
    
    <sql id="SysCustomerProps">
      #{id},#{gmtCreate},#{gmtModified},#{createAccount},#{modifiedAccount},#{isDelete},#{name},#{no},#{phone},#{email},#{cardImageId},#{address},#{registerDate},#{state}
    </sql>
    
    <sql id="SysCustomerWhere">
      
    </sql>
    
    <sql id="SysCustomerDtoWhere">
      
    </sql>
	
	<select id="selectByDto"  parameterType="com.sdstc.system.model.SysCustomer" resultMap="SysCustomerMap">
		select
			<include refid="SysCustomerCols"></include>
		from sys_customer
		<where>
		    <include refid="SysCustomerWhere"></include>
		</where>
	</select>
	
	<select id="selectCountByDto"  parameterType="com.sdstc.system.model.SysCustomer" resultType="Integer">
		select
			count(*)
		from sys_customer
		<where>
		    <include refid="SysCustomerWhere"></include>
		</where>
	</select>
	
	<select id="selectPageByDto" resultMap="SysCustomerMap">
		select
			<include refid="SysCustomerCols"></include>
		from sys_customer
		<where>
		    <include refid="SysCustomerDtoWhere"></include>
		</where>
		limit #{pageDto.start},#{pageDto.pageSize}
	</select>
</mapper>