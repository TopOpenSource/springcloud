<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.PubMessageDao">
	
	<resultMap id="PubMessageMap" type="com.sdstc.system.model.PubMessage">
	    <id column="id" property="id" />
	    <result column="customer_id" property="customerId" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="create_account" property="createAccount" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="type" property="type" />
	    <result column="level" property="level" />
	    <result column="info" property="info" />
	    <result column="status" property="status" />
	    <result column="owner" property="owner" />
	</resultMap>
	
    <sql id="PubMessageCols">
      id,customer_id,gmt_create,gmt_modified,create_account,modified_account,type,level,info,status,owner
    </sql>
    
    <sql id="PubMessageProps">
      #{id},#{customerId},#{gmtCreate},#{gmtModified},#{createAccount},#{modifiedAccount},#{type},#{level},#{info},#{status},#{owner}
    </sql>
    
    <sql id="PubMessageWhere">
      
    </sql>
    
    <sql id="PubMessageDtoWhere">
      
    </sql>
	
	<select id="selectByDto"  parameterType="com.sdstc.system.model.PubMessage" resultMap="PubMessageMap">
		select
			<include refid="PubMessageCols"></include>
		from pub_message
		<where>
		    <include refid="PubMessageWhere"></include>
		</where>
	</select>
	
	<select id="selectCountByDto"  parameterType="com.sdstc.system.model.PubMessage" resultType="Integer">
		select
			count(*)
		from pub_message
		<where>
		    <include refid="PubMessageWhere"></include>
		</where>
	</select>
	
	<select id="selectPageByDto" resultMap="PubMessageMap">
		select
			<include refid="PubMessageCols"></include>
		from pub_file
		<where>
		    <include refid="PubMessageDtoWhere"></include>
		</where>
		limit #{pageDto.start},#{pageDto.pageSize}
	</select>
</mapper>