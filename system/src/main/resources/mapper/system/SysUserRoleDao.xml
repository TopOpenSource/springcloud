<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.SysUserRoleDao">
	
	<resultMap id="SysUserRoleMap" type="com.sdstc.system.model.SysUserRole">
	    <id column="id" property="id" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="create_account" property="createAccount" />
	    <result column="is_delete" property="isDelete" />
	    <result column="user_account" property="userAccount" />
	    <result column="role_id" property="roleId" />
	    <result column="customer_id" property="customerId" />
	</resultMap>
	
    <sql id="SysUserRoleCols">
      id,gmt_create,gmt_modified,modified_account,create_account,is_delete,user_account,role_id,customer_id
    </sql>
    
    <sql id="SysUserRoleProps">
      #{id},#{gmtCreate},#{gmtModified},#{modifiedAccount},#{createAccount},#{isDelete},#{userAccount},#{roleId},#{customerId}
    </sql>
    
    <sql id="SysUserRolePropsDtos">
      #{dto.id},#{dto.gmtCreate},#{dto.gmtModified},#{dto.modifiedAccount},#{dto.createAccount},#{dto.isDelete},#{dto.userAccount},#{dto.roleId},#{dto.customerId}
    </sql>
    
    <sql id="SysUserRoleWhere">
      
    </sql>
    
    <sql id="SysUserRoleDtoWhere">
      
    </sql>
	
	<select id="selectByDto"  parameterType="com.sdstc.system.model.SysUserRole" resultMap="SysUserRoleMap">
		select
			<include refid="SysUserRoleCols"></include>
		from sys_user_role
		<where>
		    <include refid="SysUserRoleWhere"></include>
		</where>
	</select>
	
	<select id="selectCountByDto"  parameterType="com.sdstc.system.model.SysUserRole" resultType="Integer">
		select
			count(*)
		from sys_user_role
		<where>
		    <include refid="SysUserRoleWhere"></include>
		</where>
	</select>
	
	<select id="selectPageByDto" resultMap="SysUserRoleMap">
		select
			<include refid="SysUserRoleCols"></include>
		from sys_user_role
		<where>
		    <include refid="SysUserRoleDtoWhere"></include>
		</where>
		limit #{pageDto.start},#{pageDto.pageSize}
	</select>
	
	<insert id="insertBatch">
        insert into sys_user_role
        (<include refid="SysUserRoleCols"></include>)
        values
        <foreach collection="dtos" item="dto" separator=",">
        (<include refid="SysUserRolePropsDtos"></include>)
        </foreach>
    </insert>
</mapper>