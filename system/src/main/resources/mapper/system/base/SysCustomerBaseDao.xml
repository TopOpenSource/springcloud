<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.base.SysCustomerBaseDao">
	
	<resultMap id="SysCustomerMap" type="com.sdstc.system.model.SysCustomer">
	    <id column="id" property="id" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="create_account" property="createAccount" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="is_delete" property="isDelete" />
	    <result column="name" property="name" />
	    <result column="no" property="no" />
	    <result column="phone" property="phone" />
	    <result column="email" property="email" />
	    <result column="card_image_id" property="cardImageId" />
	    <result column="address" property="address" />
	    <result column="register_date" property="registerDate" />
	    <result column="state" property="state" />
	</resultMap>
	
    <sql id="SysCustomerCols">
      id,gmt_create,gmt_modified,create_account,modified_account,is_delete,name,no,phone,email,card_image_id,address,register_date,state
    </sql>
    
    <sql id="SysCustomerProps">
      #{id},#{gmtCreate},#{gmtModified},#{createAccount},#{modifiedAccount},#{isDelete},#{name},#{no},#{phone},#{email},#{cardImageId},#{address},#{registerDate},#{state}
    </sql>
    
    <insert id="insert" parameterType="com.sdstc.system.model.SysCustomer">
        insert into sys_customer
        (<include refid="SysCustomerCols"></include>)
        values
        (<include refid="SysCustomerProps"></include>)
    </insert>
        
    <update id="updateSelectiveByPK" parameterType="com.sdstc.system.model.SysCustomer">
		update sys_customer
		<set>
		  
	        <if test="gmtCreate != null">
		        gmt_create = #{gmtCreate},
		    </if>
		  
	        <if test="gmtModified != null">
		        gmt_modified = #{gmtModified},
		    </if>
		  
	        <if test="createAccount != null and createAccount != ''">
		        create_account = #{createAccount},
		    </if>
		  
	        <if test="modifiedAccount != null and modifiedAccount != ''">
		        modified_account = #{modifiedAccount},
		    </if>
		  
	        <if test="isDelete != null and isDelete != ''">
		        is_delete = #{isDelete},
		    </if>
		  
	        <if test="name != null and name != ''">
		        name = #{name},
		    </if>
		  
	        <if test="no != null and no != ''">
		        no = #{no},
		    </if>
		  
	        <if test="phone != null and phone != ''">
		        phone = #{phone},
		    </if>
		  
	        <if test="email != null and email != ''">
		        email = #{email},
		    </if>
		  
	        <if test="cardImageId != null">
		        card_image_id = #{cardImageId},
		    </if>
		  
	        <if test="address != null and address != ''">
		        address = #{address},
		    </if>
		  
	        <if test="registerDate != null">
		        register_date = #{registerDate},
		    </if>
		  
	        <if test="state != null and state != ''">
		        state = #{state},
		    </if>
		</set>
		<where>
		  id = #{id} 
		</where> 
	</update>
	
	<update id="updateByPK" parameterType="com.sdstc.system.model.SysCustomer">
		update sys_customer
		<set>
	    gmt_create = #{gmtCreate},
	    gmt_modified = #{gmtModified},
	    create_account = #{createAccount},
	    modified_account = #{modifiedAccount},
	    is_delete = #{isDelete},
	    name = #{name},
	    no = #{no},
	    phone = #{phone},
	    email = #{email},
	    card_image_id = #{cardImageId},
	    address = #{address},
	    register_date = #{registerDate},
	    state = #{state},
		</set>
		<where>
		  id = #{id} 
		</where> 
	</update>
	
	<delete id="deleteByPK">
	   <!--存在删除状态键则逻辑删除-->
		update sys_customer
		set is_delete = '1'
		<where>
		  id = #{id} 
		</where> 
	</delete>
	
	<select id="selectByPK" resultMap="SysCustomerMap">
		select
			<include refid="SysCustomerCols"></include>
		from sys_customer
		<where>
		  id = #{id} 
		  and is_delete = '0'
		</where> 
	</select>
	
</mapper>