<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.base.SysUserRoleBaseDao">
	
	<resultMap id="SysUserRoleMap" type="com.sdstc.system.model.SysUserRole">
	    <id column="id" property="id" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="create_account" property="createAccount" />
	    <result column="is_delete" property="isDelete" />
	    <result column="user_account" property="userAccount" />
	    <result column="role_id" property="roleId" />
	    <result column="customer_id" property="customerId" />
	</resultMap>
	
    <sql id="SysUserRoleCols">
      id,gmt_create,gmt_modified,modified_account,create_account,is_delete,user_account,role_id,customer_id
    </sql>
    
    <sql id="SysUserRoleProps">
      #{id},#{gmtCreate},#{gmtModified},#{modifiedAccount},#{createAccount},#{isDelete},#{userAccount},#{roleId},#{customerId}
    </sql>
    
    <insert id="insert" parameterType="com.sdstc.system.model.SysUserRole">
        insert into sys_user_role
        (<include refid="SysUserRoleCols"></include>)
        values
        (<include refid="SysUserRoleProps"></include>)
    </insert>
        
    <update id="updateSelectiveByPK" parameterType="com.sdstc.system.model.SysUserRole">
		update sys_user_role
		<set>
		  
	        <if test="gmtCreate != null">
		        gmt_create = #{gmtCreate},
		    </if>
		  
	        <if test="gmtModified != null">
		        gmt_modified = #{gmtModified},
		    </if>
		  
	        <if test="modifiedAccount != null and modifiedAccount != ''">
		        modified_account = #{modifiedAccount},
		    </if>
		  
	        <if test="createAccount != null and createAccount != ''">
		        create_account = #{createAccount},
		    </if>
		  
	        <if test="isDelete != null and isDelete != ''">
		        is_delete = #{isDelete},
		    </if>
		  
	        <if test="userAccount != null and userAccount != ''">
		        user_account = #{userAccount},
		    </if>
		  
	        <if test="roleId != null">
		        role_id = #{roleId},
		    </if>
		  
	        <if test="customerId != null">
		        customer_id = #{customerId},
		    </if>
		</set>
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</update>
	
	<update id="updateByPK" parameterType="com.sdstc.system.model.SysUserRole">
		update sys_user_role
		<set>
	    gmt_create = #{gmtCreate},
	    gmt_modified = #{gmtModified},
	    modified_account = #{modifiedAccount},
	    create_account = #{createAccount},
	    is_delete = #{isDelete},
	    user_account = #{userAccount},
	    role_id = #{roleId},
	    customer_id = #{customerId},
		</set>
		<where>
		  id = #{id} 
		  and customer_id = #{customerId} 
		</where> 
	</update>
	
	<delete id="deleteByPK">
	   <!--存在删除状态键则逻辑删除-->
		update sys_user_role
		set is_delete = '1'
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</delete>
	
	<select id="selectByPK" resultMap="SysUserRoleMap">
		select
			<include refid="SysUserRoleCols"></include>
		from sys_user_role
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		  and is_delete = '0'
		</where> 
	</select>
	
</mapper>