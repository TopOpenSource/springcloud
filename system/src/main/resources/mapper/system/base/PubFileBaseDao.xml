<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.base.PubFileBaseDao">
	
	<resultMap id="PubFileMap" type="com.sdstc.system.model.PubFile">
	    <id column="id" property="id" />
	    <result column="name" property="name" />
	    <result column="size" property="size" />
	    <result column="path" property="path" />
	    <result column="type" property="type" />
	    <result column="customer_id" property="customerId" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="create_account" property="createAccount" />
	    <result column="modified_account" property="modifiedAccount" />
	</resultMap>
	
    <sql id="PubFileCols">
      id,name,size,path,type,customer_id,gmt_create,gmt_modified,create_account,modified_account
    </sql>
    
    <sql id="PubFileProps">
      #{id},#{name},#{size},#{path},#{type},#{customerId},#{gmtCreate},#{gmtModified},#{createAccount},#{modifiedAccount}
    </sql>
    
    <insert id="insert" parameterType="com.sdstc.system.model.PubFile">
        insert into pub_file
        (<include refid="PubFileCols"></include>)
        values
        (<include refid="PubFileProps"></include>)
    </insert>
        
    <update id="updateSelectiveByPK" parameterType="com.sdstc.system.model.PubFile">
		update pub_file
		<set>
	        <if test="name != null and name != ''">
		        name = #{name},
		    </if>
	        <if test="size != null">
		        size = #{size},
		    </if>
	        <if test="path != null and path != ''">
		        path = #{path},
		    </if>
	        <if test="type != null and type != ''">
		        type = #{type},
		    </if>
	        <if test="customerId != null">
		        customer_id = #{customerId},
		    </if>
	        <if test="gmtCreate != null">
		        gmt_create = #{gmtCreate},
		    </if>
	        <if test="gmtModified != null">
		        gmt_modified = #{gmtModified},
		    </if>
	        <if test="createAccount != null and createAccount != ''">
		        create_account = #{createAccount},
		    </if>
	        <if test="modifiedAccount != null and modifiedAccount != ''">
		        modified_account = #{modifiedAccount},
		    </if>
		</set>
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</update>
	
	<update id="updateByPK" parameterType="com.sdstc.system.model.PubFile">
		update pub_file
		<set>
	    name = #{name},
	    size = #{size},
	    path = #{path},
	    type = #{type},
	    customer_id = #{customerId},
	    gmt_create = #{gmtCreate},
	    gmt_modified = #{gmtModified},
	    create_account = #{createAccount},
	    modified_account = #{modifiedAccount},
		</set>
		<where>
		  id = #{id} 
		  and customer_id = #{customerId} 
		</where> 
	</update>
	
	<delete id="deleteByPK">
		delete from pub_file
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</delete>
	
	<select id="selectByPK" resultMap="PubFileMap">
		select
			<include refid="PubFileCols"></include>
		from pub_file
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</select>
	
	<select id="selectByDto"  parameterType="com.sdstc.system.model.PubFile" resultMap="PubFileMap">
		select
			<include refid="PubFileCols"></include>
		from pub_file
		<where>
		    
		</where>
	</select>
</mapper>