<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.base.PubMessageBaseDao">
	
	<resultMap id="PubMessageMap" type="com.sdstc.system.model.PubMessage">
	    <id column="id" property="id" />
	    <result column="customer_id" property="customerId" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="create_account" property="createAccount" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="type" property="type" />
	    <result column="level" property="level" />
	    <result column="info" property="info" />
	    <result column="status" property="status" />
	    <result column="owner" property="owner" />
	</resultMap>
	
    <sql id="PubMessageCols">
      id,customer_id,gmt_create,gmt_modified,create_account,modified_account,type,level,info,status,owner
    </sql>
    
    <sql id="PubMessageProps">
      #{id},#{customerId},#{gmtCreate},#{gmtModified},#{createAccount},#{modifiedAccount},#{type},#{level},#{info},#{status},#{owner}
    </sql>
    
    <insert id="insert" parameterType="com.sdstc.system.model.PubMessage">
        insert into pub_message
        (<include refid="PubMessageCols"></include>)
        values
        (<include refid="PubMessageProps"></include>)
    </insert>
        
    <update id="updateSelectiveByPK" parameterType="com.sdstc.system.model.PubMessage">
		update pub_message
		<set>
		  
	        <if test="customerId != null">
		        customer_id = #{customerId},
		    </if>
		  
	        <if test="gmtCreate != null">
		        gmt_create = #{gmtCreate},
		    </if>
		  
	        <if test="gmtModified != null">
		        gmt_modified = #{gmtModified},
		    </if>
		  
	        <if test="createAccount != null and createAccount != ''">
		        create_account = #{createAccount},
		    </if>
		  
	        <if test="modifiedAccount != null and modifiedAccount != ''">
		        modified_account = #{modifiedAccount},
		    </if>
		  
	        <if test="type != null and type != ''">
		        type = #{type},
		    </if>
		  
	        <if test="level != null">
		        level = #{level},
		    </if>
		  
	        <if test="info != null and info != ''">
		        info = #{info},
		    </if>
		  
	        <if test="status != null">
		        status = #{status},
		    </if>
		  
	        <if test="owner != null and owner != ''">
		        owner = #{owner},
		    </if>
		</set>
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</update>
	
	<update id="updateByPK" parameterType="com.sdstc.system.model.PubMessage">
		update pub_message
		<set>
	    customer_id = #{customerId},
	    gmt_create = #{gmtCreate},
	    gmt_modified = #{gmtModified},
	    create_account = #{createAccount},
	    modified_account = #{modifiedAccount},
	    type = #{type},
	    level = #{level},
	    info = #{info},
	    status = #{status},
	    owner = #{owner},
		</set>
		<where>
		  id = #{id} 
		  and customer_id = #{customerId} 
		</where> 
	</update>
	
	<delete id="deleteByPK">
		delete from pub_message
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</delete>
	
	<select id="selectByPK" resultMap="PubMessageMap">
		select
			<include refid="PubMessageCols"></include>
		from pub_message
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</select>
	
</mapper>