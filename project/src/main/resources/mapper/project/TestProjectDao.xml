<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.project.dao.TestProjectDao">
	
	<resultMap id="TestProjectMap" type="com.sdstc.project.model.TestProject">
	    <id column="id" property="id" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="create_account" property="createAccount" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="customer_id" property="customerId" />
	    <result column="name" property="name" />
	    <result column="state" property="state" />
	    <result column="start_date" property="startDate" />
	    <result column="end_date" property="endDate" />
	    <result column="type" property="type" />
	</resultMap>
	
    <sql id="TestProjectCols">
      id,gmt_create,gmt_modified,create_account,modified_account,customer_id,name,state,start_date,end_date,type
    </sql>
    
    <sql id="TestProjectProps">
      #{id},#{gmtCreate},#{gmtModified},#{createAccount},#{modifiedAccount},#{customerId},#{name},#{state},#{startDate},#{endDate},#{type}
    </sql>
    
    <sql id="TestProjectWhere">
      
    </sql>
    
    <sql id="TestProjectDtoWhere">
      
    </sql>
	
	<select id="selectByDto"  parameterType="com.sdstc.project.model.TestProject" resultMap="TestProjectMap">
		select
			<include refid="TestProjectCols"></include>
		from test_project
		<where>
		    <include refid="TestProjectWhere"></include>
		</where>
	</select>
	
	<select id="selectCountByDto"  parameterType="com.sdstc.project.model.TestProject" resultType="Integer">
		select
			count(*)
		from test_project
		<where>
		    <include refid="TestProjectWhere"></include>
		</where>
	</select>
	
	<select id="selectPageByDto" resultMap="TestProjectMap">
		select
			<include refid="TestProjectCols"></include>
		from pub_file
		<where>
		    <include refid="TestProjectDtoWhere"></include>
		</where>
		limit #{pageDto.start},#{pageDto.pageSize}
	</select>
</mapper>