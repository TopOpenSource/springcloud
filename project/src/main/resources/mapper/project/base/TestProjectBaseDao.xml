<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.project.dao.base.TestProjectBaseDao">
	
	<resultMap id="TestProjectMap" type="com.sdstc.project.model.TestProject">
	    <id column="id" property="id" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="create_account" property="createAccount" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="customer_id" property="customerId" />
	    <result column="name" property="name" />
	    <result column="state" property="state" />
	    <result column="start_date" property="startDate" />
	    <result column="end_date" property="endDate" />
	    <result column="type" property="type" />
	</resultMap>
	
    <sql id="TestProjectCols">
      id,gmt_create,gmt_modified,create_account,modified_account,customer_id,name,state,start_date,end_date,type
    </sql>
    
    <sql id="TestProjectProps">
      #{id},#{gmtCreate},#{gmtModified},#{createAccount},#{modifiedAccount},#{customerId},#{name},#{state},#{startDate},#{endDate},#{type}
    </sql>
    
    <insert id="insert" parameterType="com.sdstc.project.model.TestProject">
        insert into test_project
        (<include refid="TestProjectCols"></include>)
        values
        (<include refid="TestProjectProps"></include>)
    </insert>
        
    <update id="updateSelectiveByPK" parameterType="com.sdstc.project.model.TestProject">
		update test_project
		<set>
		  
	        <if test="gmtCreate != null">
		        gmt_create = #{gmtCreate},
		    </if>
		  
	        <if test="gmtModified != null">
		        gmt_modified = #{gmtModified},
		    </if>
		  
	        <if test="createAccount != null and createAccount != ''">
		        create_account = #{createAccount},
		    </if>
		  
	        <if test="modifiedAccount != null and modifiedAccount != ''">
		        modified_account = #{modifiedAccount},
		    </if>
		  
	        <if test="customerId != null">
		        customer_id = #{customerId},
		    </if>
		  
	        <if test="name != null and name != ''">
		        name = #{name},
		    </if>
		  
	        <if test="state != null">
		        state = #{state},
		    </if>
		  
	        <if test="startDate != null">
		        start_date = #{startDate},
		    </if>
		  
	        <if test="endDate != null">
		        end_date = #{endDate},
		    </if>
		  
	        <if test="type != null and type != ''">
		        type = #{type},
		    </if>
		</set>
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</update>
	
	<update id="updateByPK" parameterType="com.sdstc.project.model.TestProject">
		update test_project
		<set>
	    gmt_create = #{gmtCreate},
	    gmt_modified = #{gmtModified},
	    create_account = #{createAccount},
	    modified_account = #{modifiedAccount},
	    customer_id = #{customerId},
	    name = #{name},
	    state = #{state},
	    start_date = #{startDate},
	    end_date = #{endDate},
	    type = #{type},
		</set>
		<where>
		  id = #{id} 
		  and customer_id = #{customerId} 
		</where> 
	</update>
	
	<delete id="deleteByPK">
		delete from test_project
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</delete>
	
	<select id="selectByPK" resultMap="TestProjectMap">
		select
			<include refid="TestProjectCols"></include>
		from test_project
		<where>
		  id = #{id} 
		  and customer_id = #{customerId}  
		</where> 
	</select>
	
</mapper>